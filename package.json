{
  "name": "word-bomb",
  "private": true,
  "version": "1.0.0",
  "description": "A fast-paced word party game built with React, TypeScript, Socket.IO, and Clean Architecture.",
  "homepage": "https://github.com/your-username/word-bomb#readme",
  "bugs": {
    "url": "https://github.com/your-username/word-bomb/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hydrabeer/word-bomb"
  },
  "license": "UNLICENSED",
  "author": "hydrabeer",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "tsc -b tsconfig.all.json",
    "build:watch": "tsc -b --watch tsconfig.all.json",
    "dev": "pnpm -r dev",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "format": "prettier --write .",
    "lint": "pnpm -r lint",
    "test": "pnpm -r run test",
    "test:coverage": "pnpm -r run test:coverage",
    "test:generate": "node scripts/generate-test.js",
    "test:watch": "vitest watch"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.1.2",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vitest": "^0.5.4",
    "happy-dom": "^17.4.4",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "ts-prune": "^0.10.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.8.0+sha512.0e82714d1b5b43c74610193cb20734897c1d00de89d0e18420aebc5977fa13d780a9cb05734624e81ebd81cc876cd464794850641c48b9544326b5622ca29971",
  "pnpm": {
    "overrides": {
      "brace-expansion@1": "1.1.12"
    }
  }
}

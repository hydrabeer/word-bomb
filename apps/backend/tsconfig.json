{
  "extends": "@word-bomb/typescript-config/node-app.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "types": ["vitest/globals"],
    "rootDir": "src",
    "outDir": "dist",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["src/*"],
      "@platform/*": ["src/platform/*"],
      "@features/*": ["src/features/*"],
      "@rooms/*": ["src/features/rooms/*"],
      "@gameplay/*": ["src/features/gameplay/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "test",
    "**/*.test.*",
    "vitest.config.ts",
    "tsup.config.ts",
    "vite.config.ts"
  ]
}

// /apps/backend/tsconfig.json
{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "composite": true,
    "rootDir": "src", // narrow to source only
    "outDir": "dist",
    "types": ["vitest/globals"]
  },
  "include": ["src"], // ✅ only source gets built
  "exclude": [
    "test", // ✅ don’t compile tests
    "**/*.test.*",
    "vitest.config.ts" // avoid emitting the config
  ],
  "references": [
    { "path": "../../packages/domain" },
    { "path": "../../packages/types" }
  ]
}

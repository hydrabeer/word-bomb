{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": [
    ".env",
    ".env.*",
    "packages/typescript-config/*.json",
    "eslint.config.mjs",
    "pnpm-workspace.yaml"
  ],
  "tasks": {
    "build": {
      "outputs": ["dist/**", "tsconfig*.tsbuildinfo"],
      "dependsOn": ["^build"]
    },
    "clean": { "cache": false },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "lint": { "outputs": [], "dependsOn": ["^lint"] },

    "test": { "dependsOn": ["^test"], "inputs": ["vitest.config.*"] },
    "test:watch": { "cache": false, "persistent": true },
    "test:coverage": { "dependsOn": ["^build"], "outputs": ["coverage/**"] },

    "typecheck": {
      "dependsOn": ["^typecheck"],
      "inputs": ["**/*.{ts,tsx}", "tsconfig.json", "tsconfig.*.json"]
    }
  }
}

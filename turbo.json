{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": [
    ".env",
    ".env.*",
    "tsconfig.base.json",
    "tsconfig.all.json"
  ],
  "tasks": {
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "clean": { "cache": false },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "lint": { "outputs": [], "dependsOn": ["^lint"] },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "inputs": ["**/*.{ts,tsx}"]
    },
    "test": { "dependsOn": ["^build"] },
    "test:watch": { "cache": false, "persistent": true },
    "test:coverage": { "dependsOn": ["^build"], "outputs": ["coverage/**"] }
  }
}

{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": [
    ".env",
    ".env.*",
    "packages/typescript-config/*.json",
    "eslint.config.mjs",
    "pnpm-workspace.yaml"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "tsconfig*.tsbuildinfo"]
    },
    "clean": { "cache": false },
    "dev": { "persistent": true, "cache": false },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": [
        "**/*.{ts,tsx}",
        "eslint.config.*",
        ".eslintignore",
        "tsconfig.json",
        "tsconfig.*.json"
      ],
      "outputs": [".eslintcache"]
    },

    "test": {
      "dependsOn": ["^test"],
      "inputs": ["**/*.{ts,tsx}", "vitest.config.*"],
      "outputs": [".vite/vitest"]
    },
    "test:watch": { "cache": false, "persistent": true },

    "test:coverage": {
      "dependsOn": ["^test"],
      "inputs": ["vitest.config.*"],
      "outputs": ["coverage/**", ".vite/vitest"]
    },

    "typecheck": {
      "dependsOn": ["^typecheck"],
      "inputs": ["**/*.{ts,tsx}", "tsconfig.json", "tsconfig.*.json"]
    }
  }
}

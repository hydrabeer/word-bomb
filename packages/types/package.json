{
  "name": "@word-bomb/types",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "exports": {
    "./socket": {
      "types": "./src/socket.ts",
      "default": "./dist/socket.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",

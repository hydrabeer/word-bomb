    "test:coverage": "vitest run --config vitest.config.ts --coverage"
  },
  "devDependencies": {
    "@word-bomb/typescript-config": "workspace:*",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4"
  }
}

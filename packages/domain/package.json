{
  "name": "@game/domain",
  "version": "0.0.0",
  "private": true,
  "exports": {
    "./chat/*": {
      "types": "./src/chat/*.ts",
      "default": "./dist/chat/*.js"
    },
    "./game/*": {
      "types": "./src/game/*.ts",
      "default": "./dist/game/*.js"
    },
    "./players/*": {
      "types": "./src/players/*.ts",
      "default": "./dist/players/*.js"
    },
    "./rooms/*": {
      "types": "./src/rooms/*.ts",
      "default": "./dist/rooms/*.js"
    },
    "./utils/*": {
      "types": "./src/utils/*.ts",
      "default": "./dist/utils/*.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint --cache --cache-location .eslintcache \"src/**/*.ts\"",
    "test": "vitest run --config vitest.config.ts",
    "test:watch": "vitest --watch --config vitest.config.ts",
    "test:coverage": "vitest run --config vitest.config.ts --coverage"
  },
  "dependencies": {
    "@word-bomb/types": "workspace:*",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "@word-bomb/typescript-config": "workspace:*",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
